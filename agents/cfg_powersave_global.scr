.sysconfig.powersave.global

`ag_ini(
    `IniAgent(
	[
	    "/etc/sysconfig/powersave/battery",
	    "/etc/sysconfig/powersave/common",
	    "/etc/sysconfig/powersave/cpufreq",
	    "/etc/sysconfig/powersave/events",
	    "/etc/sysconfig/powersave/hdparm",
	    "/etc/sysconfig/powersave/sleep",
	    "/etc/sysconfig/powersave/thermal",
	],
	$[
	    /* values at the top level, allow comments after value */
	    "options"	: [ "global_values" ],
	    /* empty lines, comments after value and whole-line comments */
	    "comments"	: [ "^[ \t]*$", "[ \t]*#.*$", "^[ \t]*#.*$" ],
	    /* matching rules */
	    "params"	: [
		/* VAR1="val1" */
		$[ "match" : [ "^[ \t]*([^ \t=]+)[ \t]*=[ \t]*\"([^\"]*)\"",
		    "%s=\"%s\"" ] ],
	    ],
	    /* matching rules */
	    "rewrite"	: [
		[ "/etc/sysconfig/powersave/(.*)", "/etc/sysconfig/powersave/%s" ],
	    ],
	]
))
